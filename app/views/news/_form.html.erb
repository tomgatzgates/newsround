<%= form_for(news) do |f| %>
  <% if news.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(news.errors.count, "error") %> prohibited this news from being saved:</h2>

      <ul>
      <% news.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :headline %>
  <%= f.text_field :headline %>

  <%= f.label :summary %>
  <%= f.text_area :summary %>

  <strong>Sources</strong>
  <ul class="sources">
    <%= f.fields_for :sources do |sources_form| %>
      <%= render partial: 'sources/fields', locals: { f: sources_form } %>
    <% end %>
  </ul>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
